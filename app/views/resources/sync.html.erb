<% content_for :masthead do %>
    <h2>Resources</h2>
    <p>Upload the source excel file containing courses, lecturer, room etc.</p>
<% end %>

<% content_for :content do %>

    <div class="row-fluid">
      <div class="span8">
        <div class="m-t-10">
          <form method="post" class="form-horizontal form-validate" enctype="multipart/form-data" action="<%= resources_run_sync_path %>">
            <%= hidden_field_tag(request_forgery_protection_token.to_s, form_authenticity_token) %>

            <fieldset>
              <div class="control-group">
                <label class="control-label" for="name">Excel File</label>
                <div class="controls">
                  <input type="file" class="input-large required" name="file" id="file">
                </div>
              </div>

              <div class="form-actions bg-transparent">
                <button type="submit" class="btn btn-primary">Run Sync</button>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

<% end %>
