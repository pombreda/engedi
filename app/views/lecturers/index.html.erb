<% content_for :masthead do %>
    <h2>Lecturers</h2>

    <p>You are currently have <%= @lecturers.count %> lecturers
      created. <%= link_to "Click here", new_lecturer_path %> to create a new one.</p>
<% end %>

<% content_for :content do %>

    <div class="row-fluid">
      <div class="span8">
        <div class="m-t-10">
          <% if @lecturers.present? %>

              <script type="text/javascript">
                  $(function(){
                      $('#lecturersList').dataTable();
                  });
              </script>

              <table id="lecturersList" class="table table-bordered table-striped table-condensed">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Code</th>
                  <th>Course</th>
                  <th>Department</th>
                </tr>
                </thead>
                <tbody>
                <% @lecturers.each do |c| %>
                    <tr>
                      <td><%= c.name %></td>
                      <td><%= c.code %></td>
                      <td><%= c.course.name if c.course.present? %></td>
                      <td><%= c.department %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <strong>No lecturers found.</strong>
          <% end %>
        </div>
      </div>
      <div class="span4">
        <ul class="nav nav-tabs nav-stacked">
          <li>
            <%= link_to new_lecturer_path do %>
                <i class="icon-user"></i>
                Add A Lecturer
            <% end %>
          </li>
          <li>
            <%= link_to importer_lecturers_path do %>
                <i class="icon-upload-alt"></i>
                Import Lecturers
            <% end %>
          </li>
        </ul>
      </div>
    </div>

<% end %>